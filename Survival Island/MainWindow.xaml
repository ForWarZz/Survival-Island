<Window
    x:Class="Survival_Island.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Survival_Island"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Fenetre"
    Title="Survival Island"
    Width="1740"
    Height="778"
    WindowState="Maximized"
    mc:Ignorable="d" KeyDown="Fenetre_KeyDown">
    <Grid>
        <Canvas>
            <Canvas
                x:Name="carteBackground"
                Width="4000"
                Height="4000" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-1130" Canvas.Top="-1619">
            </Canvas>
        </Canvas>


        <Ellipse
            x:Name="ellips"
            Canvas.Left="3561"
            Canvas.Top="3659"
            Width="151"
            Height="170"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="Black"
            Stroke="Black" />

        <StackPanel Orientation="Vertical" Margin="20" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    x:Name="progressVieIle"
                    Width="300"
                    Height="20"
                    Value="75"
                    Foreground="#FF9C220E"
                    Background="#FF444444"/>
                <TextBlock
                    x:Name="txtVieIle"
                    Text="750 / 1000 PV" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,25,0,0">

                <ProgressBar
                    x:Name="progressVieNavire"
                    Width="300"
                    Height="20"
                    Value="50"
                    Foreground="#FF59A214"
                    Background="#FF444444" />
                <TextBlock
                    x:Name="txtVieNavire"
                    Text="500 / 1000 PV" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
