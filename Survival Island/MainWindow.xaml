<Window
    x:Class="Survival_Island.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Survival_Island"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Fenetre"
    Title="Survival Island"
    Width="1740"
    Height="778"
    KeyDown="Fenetre_KeyDown"
    KeyUp="Fenetre_KeyUp"
    MouseLeftButtonDown="Fenetre_MouseLeftButtonDown"
    MouseLeftButtonUp="Fenetre_MouseLeftButtonUp"
    MouseMove="Fenetre_MouseMove"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="BoutonRond"
            TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                         Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="10">
                            <ContentPresenter 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Canvas
            x:Name="carteBackground"
            Width="4000"
            Height="4000"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" >
        </Canvas>


        <StackPanel
            x:Name="hudJoueur"
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Vertical"
            Visibility="Hidden">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <ProgressBar
                    x:Name="progressVieIle"
                    Width="300"
                    Height="20"
                    Background="#FF444444"
                    Foreground="#FF9C220E"
                    Value="75" />
                <TextBlock
                    x:Name="txtVieIle"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="750 / 1000 PV" />
            </StackPanel>
            <StackPanel
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                Orientation="Vertical">


                <ProgressBar
                    x:Name="progressVieNavire"
                    Width="300"
                    Height="20"
                    Background="#FF444444"
                    Foreground="#FF59A214"
                    Value="90" />
                <TextBlock
                    x:Name="txtVieNavire"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="500 / 1000 PV" />
            </StackPanel>
        </StackPanel>

        <StackPanel
            x:Name="menuAccueil"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Image
                Canvas.Left="1856"
                Canvas.Top="1659"
                Width="370"
                Height="371"
                Margin="0,0,0,80"
                Source="/images/logo.png"
                Stretch="Fill" />


            <Button
                x:Name="btnJouer"
                Height="40"
                Background="#FFC15911"
                BorderBrush="#FFC15911"
                Click="btnJouer_Click"
                Content="Jouer"
                FontSize="18"
                Foreground="White" />
            <Button
                x:Name="btnOuvrirOptions"
                Height="40"
                Margin="0,20,0,0"
                Background="#FFC15911"
                BorderBrush="#FFC15911"
                Content="Paramètres"
                FontSize="18"
                Foreground="White" />
            <Button
                x:Name="btnFermerJeu"
                Height="40"
                Margin="0,60,0,0"
                Background="#FFBE5911"
                BorderBrush="#FFC15911"
                Click="btnFermerJeu_Click"
                Content="Retour au bureau"
                FontSize="18"
                Foreground="White" />
        </StackPanel>


        <Button  
                x:Name="btnAmeliorations"
                Style="{StaticResource BoutonRond}"
                Height="50"
                Background="#FFC15911"
                BorderBrush="#FFC15911"
                Content="Améliorations"
                FontSize="18"
                Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,32" Width="330"/>

        <StackPanel x:Name="spAmelio" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,87" Height="350" Width="330" Background="#33000000">
            <TextBlock x:Name="txtAmelio" Text="Améliorations" TextAlignment="Center" Background="#FFC15911" Foreground="White" VerticalAlignment="Top" Height="50" FontSize="22" TextWrapping="Wrap"/>
            <StackPanel Height="60" Orientation="Horizontal">
                <StackPanel Width="200">
                    <TextBlock Text="Progression avant prochain niveau :" HorizontalAlignment="Center"/>
                    <ProgressBar x:Name="barreXP" Height="20" Width="150" />
                    <TextBlock x:Name="txtXP" HorizontalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="Points : " VerticalAlignment="Center" FontSize="9" Margin="20,0,0,0"/>
                <Ellipse Width="50" Height="50" Stroke="Black" Margin="10,0,0,0" Fill="Black" />
            </StackPanel>
            <StackPanel Height="60" Orientation="Horizontal">
                <TextBlock Text="Vie du bateau : " Height="25" Margin="50,0,0,0" FontSize="20" HorizontalAlignment="Left" />
                <TextBlock Text="" Height="25" Width="50"/>
                <Button Content="+" Width="50" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
